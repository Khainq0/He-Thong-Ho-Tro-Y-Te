@{
    ViewBag.Title = "News";
    Layout = "~/Views/Shared/HomeTemplate.cshtml";
}
@model PagedList.IPagedList<He_thong_ho_tro_y_te.Models.DB.News>
@using PagedList.Mvc




@*<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">*@
<body>
    <div>
        <section class="slider_section">
            <div id="myCarousel" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                    <li data-target="#myCarousel" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">

                        <div class="container-fluid padding_dd">
                            <div class="carousel-caption">
                                <div class="row">
                                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12">
                                        <div class="text-bg">
                                            <span>Tin tức</span>
                                            <h1>Covid 19</h1>
                                            <p>
                                                Thứ trưởng Bộ Y tế: Chỉ đề lọt 1 ca COVID-19 là có thể thành “bom nổ chậm”
                                            </p>
                                            <input class="Vegetable_fom" placeholder="Vegetable" type="text" name=" Vegetable">
                                            <button class="Search_btn">Search</button>

                                            <a href="Javascript:void(0)">Đọc thêm</a>
                                        </div>
                                    </div>
                                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12">
                                        <div class="images_box">
                                            <figure><img src="~/Content/images/truonghop72.jpg"></figure>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="carousel-item">

                        <div class="container-fluid padding_dd">
                            <div class="carousel-caption">

                                <div class="row">
                                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12">
                                        <div class="text-bg">
                                            <span>Tin tức</span>
                                            <h1>Covid 19</h1>
                                            <p>Thứ trưởng Bộ Y tế: Chỉ đề lọt 1 ca COVID-19 là có thể thành “bom nổ chậm” </p>
                                            <form class="Vegetable">
                                                <input class="Vegetable_fom" placeholder="Vegetable" type="text" name=" Vegetable">
                                                <button class="Search_btn">Search</button>
                                            </form>
                                            <a href="Javascript:void(0)">Đọc thêm</a>
                                        </div>
                                    </div>

                                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12">
                                        <div class="images_box">
                                            <figure><img src="~/Content/images/truonghop72.jpg"></figure>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>


                    <div class="carousel-item">

                        <div class="container-fluid padding_dd">
                            <div class="carousel-caption ">
                                <div class="row">
                                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12">
                                        <div class="text-bg">
                                            <span>Tin tức</span>
                                            <h1>Covid 19</h1>
                                            <p>Thứ trưởng Bộ Y tế: Chỉ đề lọt 1 ca COVID-19 là có thể thành “bom nổ chậm”</p>
                                            <form class="Vegetable">
                                                <input class="Vegetable_fom" placeholder="Vegetable" type="text" name=" Vegetable">
                                                <button class="Search_btn">Tìm kiếm</button>
                                            </form>
                                            <a href="Javascript:void(0)">Đọc thêm</a>
                                        </div>
                                    </div>
                                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12">
                                        <div class="images_box">
                                            <figure><img src="~/Content/images/truonghop72.jpg"></figure>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <div class="container" style="margin-bottom:200px">
            <div class="row" style="border:double;">
                <div class="col-md-8 " style="margin-left:100px;">
                    <div class="content-panel-title">
                        <h2>Tin mới</h2>
                    </div>
                    <div class="content-panel-body article-list">

                        @foreach (var item in Model)
                        {
                            <div class="item row" style="margin-bottom:20px">
                                <div class="item-header col-md-6" style="border:outset">
                                    <a href="/Home/ChiTietTinTuc/@item.ID">

                                        <img src="~/Asset/Photo/@item.Image" alt="" style="width: 326px; height: 220px">
                                    </a>
                                </div>
                                <div class="item-content col-md-6">
                                    <h3>
                                        <a href="/Home/ChiTietTinTuc/@item.ID">@item.Name</a>
                                    </h3>
                                    <span class="item-meta">
                                        <a href="#"><i class="fa fa-comment-o"></i>@item.CreatedBy</a>
                                        <a href="#"><i class="fa fa-clock-o"></i>@item.CreatedDate</a>
                                    </span>
                                    <a href="/Home/ChiTietTinTuc/@item.ID" class="read-more-button">Chi tiết<i class="fa fa-mail-forward"></i></a>
                                </div>
                            </div>

                        }


                    </div>
                    <div class="w3view-cart">
                        <div class="pagination">

                            @Html.PagedListPager(Model, PageNum => Url.Action("News", new { PageNum, @searchString = @ViewBag.SearchString }))

                        </div>
                    </div>



                    </div>
            </div>
        </div>

    </div>
</body>
<style>
    .w3view-cart {
        cursor: pointer;
        width: 50%;
        margin: 1em auto 0;
        display: block;
        padding: 3px 0 9px 0px;
        font-weight: 900;
        border: none;
        text-transform: uppercase;
        font-size: 13px;
        background: #fff;
        font-family: 'Open Sans', sans-serif;
        color: #900;
    }
    .pagination {
        display: inline;
    }

        .pagination a {
            color: black;
            float: left;
            padding: 8px 16px;
            text-decoration: none;
        }

            .pagination a.active {
                background-color: #4CAF50;
                color: white;
                border-radius: 5px;
            }

            .pagination a:hover:not(.active) {
                background-color: #ddd;
                border-radius: 5px;
                background-color: #4CAF50;
            }
</style>

